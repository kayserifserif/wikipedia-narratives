<!DOCTYPE html>
<html lang="en">
<head>
  <title></title>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <p><a href="/">Home</a></p>
  <p id="chain-counter">Article chain: <span><span id="chain-count"><%-chain.length%></span>/10</span></p>
  <% if (chain) { %>
    <p id="article-chain" class="constructing">
      <% if (chain.length > 0) { %>
        <% chain.forEach(function(node) { %>
          <span class="article-node"><%- node.title %></span>
        <% }); %>
      <% } %>
    </p>
  <% } %>
  <% if (articleLinks) { %>
    <p>Randomised collection of links in current article:</p>
    <div class="article-links">
      <form action="/chain" method="POST">
        <% articleLinks.forEach(function(link) { %>
          <button class="article-link" name="article_link" value=<%=link.url_stub%>><%- link.title %></button>
        <% }); %>
      </form>
    </div>
  <% } %>
  <% if (chain.length == 10) { %>
    <form action="" id="narratives-form">
      <button id="create-narrative" type="button">Create a narrative</button>
      <button id="compare-narratives" type="button">Compare narratives</button>
    </form>
    <div id="paragraphs">
      <% chain.forEach(function(node) { %>
        <p><%- node.paragraph %></p>
      <% }) %>
    </div>
  <% } %>
  <script src="/js/scripts.js"></script>
</body>
</html>